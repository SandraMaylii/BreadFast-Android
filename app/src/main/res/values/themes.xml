<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Panaderia" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Panaderia" parent="Base.Theme.Panaderia" />

    <!-- Button round -->
    <style name="ButtonRound" parent="android:Widget.Button">
        <item name="backgroundTint">@color/button</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/button_state_selected</item>
    </style>

    <!-- Button selected -->
    <style name="ButtonSelected" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Button no select -->
    <style name="ButtonNoSelected" parent="android:Widget.Button">
        <item name="android:textColor">@color/txt_no_select</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Edit Text Register -->
    <style name="EditTextRegister" parent="android:Widget.EditText">
        <item name="android:background">@drawable/edit_text_background</item>
        <item name="android:textColor">@color/edit_txt_hint</item>
        <item name="android:textSize">20sp</item>
        <item name="android:radius">20dp</item>
    </style>
</resources>